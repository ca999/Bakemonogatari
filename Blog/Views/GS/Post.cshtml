@model Post


@{ 

}



<div class="container2">
    <div class="post">
        @if (!String.IsNullOrEmpty(Model.Image))
        {


            var image_path = $"/ImageGS/{Model.Image}";
            <img src="@image_path"/>
            <span class="title">@Model.Title</span>

        }
    </div>

    <div class="post-body">
        @Html.Raw(@Model.Body)
    </div>

</div>