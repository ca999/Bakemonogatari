<div class="main-img">
    <span class="title">BAKEMONOGATARI</span>
</div>


<div class="container">
   
    @foreach (var post in Model)
    {
        var image_path = $"/Image/{post.Image}";
        <a class="post" asp-controller="UE" asp-action="Post" asp-route-id="@post.Id">
            <img src="@image_path" />
            <span class="title">
                @post.Title
            </span>
            <h3><span>@post.Body</span></h3>

        </a>
    }



</div>